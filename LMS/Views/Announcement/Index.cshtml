@{
    ViewData["Title"] = "Announcement";
    string coursename = ViewData["coursename"] != null ? ViewData["coursename"] as string : "";
    var id = Context.GetRouteData().Values["id"];
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<style>
    .backbutton {
        background: #1D6C9B;
        border-radius: 999px;
        box-shadow: #1D6C9B 0 10px 20px -10px;
        box-sizing: border-box;
        color: #FFFFFF;
        cursor: pointer;
        font-family: Inter,Helvetica,"Apple Color Emoji","Segoe UI Emoji",NotoColorEmoji,"Noto Color Emoji","Segoe UI Symbol","Android Emoji",EmojiSymbols,-apple-system,system-ui,"Segoe UI",Roboto,"Helvetica Neue","Noto Sans",sans-serif;
        font-size: 16px;
        font-weight: 700;
        line-height: 24px;
        opacity: 1;
        outline: 0 solid transparent;
        padding: 8px 18px;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        width: fit-content;
        word-break: break-word;
        border: 0;
    }
</style>
<body>
    <div class="container">
        <button onclick="history.back()" class="backbutton">Go Back</button>
        <h1 style="font-weight:bold;margin:auto; ">Announcement</h1><br>
        <form method="POST" action="/teacher/announcement/@id/@coursename" enctype="multipart/form-data">
            <div class="form-group row" style="margin-top:10px;">
                <label for="Title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10 mb-3">
                    <input type="text" class="form-control" name="Title" id="Title" placeholder="Announcement Title" required>
                </div>
            </div>
            <div class="form-group row" style="margin-top:10px;">
                <label for="Description" class="col-sm-2 col-form-label">Description</label>
                <div class="mb-3 col-sm-10">
                    <textarea class="form-control" name="Description" id="Description" placeholder="Annoucement Text" required></textarea>
                </div>
            </div>
            <div class="form-group row" style="margin-top:10px;">
                <!-- Date input -->
                <label class="col-sm-2 col-form-label" for="DueDate">Date</label>
                <div class="mb-3 col-sm-10">
                    <input class="form-control" id="DueDate" name="DueDate" placeholder="YYY/MM/DD" type="text" />
                </div>
            </div>
            <div class="form-group row" style="margin-top:10px;">
                <label class="col-sm-2 col-form-label" for="announcementType">Announcement Type</label>
                <div class="mb-3 col-sm-10">
                    <select class="custom-select" name="announcementType" id="announcementType" required>
                            <option value="">Select</option>
                            <option value="ASSIGNMENT">Assignment</option>
                            <option value="ANNOUNCEMENT">Announcement</option>
                        </select>
                    
                </div>
            </div>
            <div class="form-group row" style="margin-top:10px;">
                <label class="col-sm-2 col-form-label" for="fileToUpload">Attachments</label>
                <div class="custom-file mb-3 col-sm-10">
                    <input type="file" class="custom-file-input" name="fileToUpload" id="fileToUpload" multiple><br>
                </div>
            </div>

            <div class="form-group row" style="margin-top:15px;">
                <div class="col-sm-10" style="margin:auto;display:grid;">
                    <button type="submit" class="btn btn-primary col-md-2 ">Publish</button>
                </div>
            </div>
        </form>
     
    </div>
</body>
</html>

